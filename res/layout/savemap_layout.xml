<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/savemap_dialog"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<EditText
android:id="@+id/mapname"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:textSize="18sp"
android:layout_below="@+id/mapnametext"
android:layout_alignParentLeft="true"
/>
<TextView
android:id="@+id/mapnametext"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Map Name:"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
/>
<Button
android:id="@+id/cancelsavebutton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Cancel"
android:layout_below="@+id/mapname"
android:layout_alignParentRight="true"
/>
<Button
android:id="@+id/savebutton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Save Map"
android:layout_below="@+id/mapname"
android:layout_toLeftOf="@+id/cancelsavebutton"
/>

</RelativeLayout>
